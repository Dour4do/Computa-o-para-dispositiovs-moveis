<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body class="p-3 mb-2 bg-dark">
<h2 class="text-white bg-dark">Registros Cadastrados</h2>

    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <td>Nome</td>
                <td>Sobrenome</td>
                <td>Data de Nascimento</td>
                <td>Sexo</td>
                <td>Telefone</td>
                <td>Email</td>
                <td>CEP</td>
                <td>Nacionalidade</td>
                <td>CPF</td>
                <td>RG</td>

            </tr>
        </thead>
        <tbody>
        <% data.forEach(function(details) { %>
            <tr>
                <td><%= details.name %></td>
                <td><%= details.surname %></td>
                <td><%= details.age %></td>
                <td><%= details.sex %></td>
                <td><%= details.phone %></td>
                <td><%= details.mail %></td>
                <td><%= details.CEP %></td>
                <td><%= details.country %></td>
                <td><%= details.CPF %></td>
                <td><%= details.rg %></td>
                <td><a href="/edit/<%= details._id %>">Editar</a> - <a href="/delete/<%= details._id %>">Deletar</a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/novo" class="btn btn-light btn-lg btn-block active" role="button" aria-pressed="true">Novo</a>
</body>
</html>